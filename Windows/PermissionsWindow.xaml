<Window x:Class="FileScanner.Windows.PermissionsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FileScanner.Windows"
        mc:Ignorable="d"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml" 
        xmlns:shell="clr-namespace:System.Windows.Shell;assembly=PresentationFramework"
        WindowStyle="None" WindowStartupLocation="CenterOwner"
        Title="Permissions" Height="400" Width="300" Background="#FF272927" SizeToContent="Manual">

    <shell:WindowChrome.WindowChrome>
        <shell:WindowChrome CaptionHeight="0" ResizeBorderThickness="0" GlassFrameThickness="0" UseAeroCaptionButtons="False"/>
    </shell:WindowChrome.WindowChrome>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30px"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <ui:TitleBar Height="30px" Background="#FF363A36" VerticalAlignment="Top"/>

        <Border Margin="4" Grid.Row="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="40px"/>
                    <RowDefinition Height="40px"/>
                    <RowDefinition/>
                    <RowDefinition Height="30"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="100px"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Row="0" Name="txtFile" VerticalAlignment="Center" Grid.Column="0" Margin="2" Grid.ColumnSpan="3" Foreground="#FFC0C4C4"/>
                    <Button Content="Set Owner" Grid.Column="3" Margin="2" Click="BtnOwner_Click" Foreground="#FFC0C4C4"/>
                </Grid>

                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Name="txtOwner" Margin="2" VerticalAlignment="Center" Grid.Column="0" Grid.ColumnSpan="2" Foreground="#FFC0C4C4"/>
                </Grid>

                <ui:DataGrid Grid.Row="2" Name="grdPermissions" CanUserAddRows="False" CanUserDeleteRows="False" AutoGenerateColumns="False" Grid.RowSpan="2" Background="#FF363A36" Foreground="#FFC0C4C4">
                    <ui:DataGrid.Columns>
                        <DataGridTextColumn Header="Access Group" Binding="{Binding Name}" Width="5*"/>
                        <DataGridTextColumn Header="Permission Level" Binding="{Binding AccessLevel}" Width="5*"/>
                    </ui:DataGrid.Columns>
                </ui:DataGrid>
                <TextBlock Name="txtStatus" Grid.Row="4" VerticalAlignment="Center"/>

                <Popup Name="popupAccess">
                    <TextBlock Text="Access denied"/>
                </Popup>
            </Grid>
        </Border>
    </Grid>
</Window>
