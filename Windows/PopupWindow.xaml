<Window x:Class="FileScanner.Windows.PopupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FileScanner.Windows"
        xmlns:shell="clr-namespace:System.Windows.Shell;assembly=PresentationFramework"
        mc:Ignorable="d"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml" 
        Width="300" AllowsTransparency="False" WindowStartupLocation="CenterOwner"
        WindowStyle="None" Background="#FF272927" SizeToContent="Height">

    <shell:WindowChrome.WindowChrome>
        <shell:WindowChrome CaptionHeight="0" ResizeBorderThickness="0" GlassFrameThickness="0" UseAeroCaptionButtons="False"/>
    </shell:WindowChrome.WindowChrome>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30px"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <ui:TitleBar Background="#FF363A36" VerticalAlignment="Top" CanMaximize="False"/>

        <Border Margin="4" Grid.Row="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="25px"/>
                    <RowDefinition/>
                    <RowDefinition Height="40px"/>
                </Grid.RowDefinitions>

                <ui:TextBlock Name="txtTitle" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="16" Grid.Row="0" Foreground="#FFC0C4C4"/>
                <Border Margin="5" Grid.Row="1">
                    <ui:TextBlock Name="txtError" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="14" TextWrapping="Wrap" Foreground="#FFC0C4C4" TextAlignment="Center"/>
                </Border>
                
                <ui:Button Content="OK" Grid.Row="2" HorizontalAlignment="Center" VerticalAlignment="Center" Click="BtnOk_Click" Background="#FF363A36" Foreground="#FFC0C4C4"/>
            </Grid>
        </Border>
    </Grid>
</Window>
